# Use the official Node.js image as the base image
FROM node:18-alpine

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Pass backend URL from docker argument to the environment variable
ARG VITE_ROOM_BACKEND_URL
ARG VITE_RESERVATION_BACKEND_URL
ARG VITE_NOTIFICATION_BACKEND_URL
ARG VITE_KEYCLOAK_BASE_URL
ARG VITE_KEYCLOAK_REALM
ARG VITE_KEYCLOAK_CLIENT_ID

ENV VITE_ROOM_BACKEND_URL=${VITE_ROOM_BACKEND_URL}
ENV VITE_RESERVATION_BACKEND_URL=${VITE_RESERVATION_BACKEND_URL}
ENV VITE_NOTIFICATION_BACKEND_URL=${VITE_NOTIFICATION_BACKEND_URL}
ENV VITE_KEYCLOAK_BASE_URL=${VITE_KEYCLOAK_BASE_URL}
ENV VITE_KEYCLOAK_REALM=${VITE_KEYCLOAK_REALM}
ENV VITE_KEYCLOAK_CLIENT_ID=${VITE_KEYCLOAK_CLIENT_ID}

# Build the application
RUN npm run build-only

# Expose the port the app runs on
EXPOSE 4173

# Start the application
# Must use the --host flag to expose the app to the network of Docker containers
CMD ["npm", "run", "preview", "--", "--host"]